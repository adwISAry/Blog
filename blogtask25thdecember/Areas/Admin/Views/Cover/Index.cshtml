@using blogtask25thdecember.Areas.Admin.ViewModels;
@using blogtask25thdecember.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<AdminCoverListItemVM>

<div class=" card shadow mb-4">
	<div class=" cardheader-appear py-3">
		<h2 class="m-0 font-weight-bold text-primary">Cover</h2>
		<a asp-action="Create" class=" btn btn-outline-success">Create</a>
</div>
<div class="card-body">
	<div class="table-responsive">
		<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
<thead>
	<th>Id</th>
	<th>Image</th>
	<th colspan="2">Actions</th>
</thead>
<tbody>
					@if (Model != null)
					{
						@foreach (var item in Model)
						{
						<td>@item.Id</td>
						<td>@item.Image</td>
						<td><img width="100" height="50" src="~/productimages/@item.Image"/> </td>
						
						<td class=" text-center"><a class="btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
						<td class=" text-center"><a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>




						}
					}
					else
					{
						<tr>
							<td class="text-center" colspan="10">No data</td>
						</tr>
					}
				</table>


		</div>
	</div>
</div>
